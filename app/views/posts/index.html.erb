<h1>Posts</h1>

<% if @posts.count > 0 %>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Post Title</th>
			<th>Post Excerpt</th>
			<th>Read Time</th>
			<th>Status</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
		
		<tr>
			<td><%= post.id %></td>
			<td><%= post.title %></td>
			<td><%= post.content[0..100] %>...</td>
			<td><%= post.read_time %></td>
			<td><%= post.status %></td>
			<td><%= link_to 'Edit', edit_post_path(post.id), :class => 'btn btn-default' %></td>
			<td></td>
			<td></td>
		</tr>

		<% end %>
	</tbody>
</table>
<% else %>
<p>No posts yet.</p>
<% end %>