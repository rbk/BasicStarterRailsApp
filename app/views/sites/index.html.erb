<h1>Listing sites</h1>

<table>
  <thead>
    <tr>
      <th>Server name</th>
      <th>Server location</th>
      <th>Ip</th>
      <th>Repository</th>
      <th>Domain</th>
      <th>Dns</th>
      <th>Email</th>
      <th>Notes</th>
      <th>Checklist complete</th>
      <th>Deployed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.server_name %></td>
        <td><%= site.server_location %></td>
        <td><%= site.ip %></td>
        <td><%= site.repository %></td>
        <td><%= site.domain %></td>
        <td><%= site.dns %></td>
        <td><%= site.email %></td>
        <td><%= site.notes %></td>
        <td><%= site.checklist_complete %></td>
        <td><%= site.deployed %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

