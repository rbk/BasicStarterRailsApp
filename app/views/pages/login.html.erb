<h1>Login</h1>

<%= show_notice(notice) %>

<%= form_tag( sessions_new_path, :class =>'form', :id => 'login-form' ) do %>
	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				<%= label_tag :email %>
				<%= text_field_tag :email, '', :class => 'form-control', :autofocus => '' %>
			</div>
			<div class="form-group">
				<%= label_tag :password %>
				<%= password_field_tag :password, '', :class => 'form-control' %>				
			</div>
			<div class="form-group">
				<%= submit_tag 'Log In', :class => 'btn btn-default' %>
			</div>
		</div>
	</div>
<% end %>
