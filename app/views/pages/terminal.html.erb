<h1>Terminal</h1>

<% if @output %>
	<pre style="overflow: scroll;height: 200px;"><%= @output %></pre>
<% end %>

<%= form_tag( '/terminal') do %>
	<div class="form-group">
		<%= label_tag :command %>
		<%= text_field_tag :command, '', :class => 'form-control', :autofocus => '' %>
	</div>
	<div class="form-group">
		<%= submit_tag 'Send', :class => 'btn btn-default' %>
	</div>
<% end %>

<small>*Sudo commands are not allowed.</small><br>
<small>*By default commands ran using ruby user.</small><br>
