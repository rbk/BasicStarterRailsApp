<%= form_for(@user, :html => {:class => 'form'}) do |f| %>
	<div class="form-group row">
		<div class="col-md-3">
			<%= f.label :email %>
			<%= f.text_field :email, :class => 'form-control' %>
		</div>
		<div class="col-md-3">
			<%= f.label :password %>
			<%= f.password_field :password, :value => @user.password,:class => 'form-control' %>				
		</div>
	</div>
	<div class="form-group row">
			<div class="col-md-3">			
				<%= f.label :first_name %>
				<%= f.text_field :first_name, :class => 'form-control' %>
			</div>
			<div class="col-md-3">
				<%= f.label :last_name %>
				<%= f.text_field :last_name, :class => 'form-control' %>
			</div>
	</div>
	<div class="form-group row">
		<div class="col-md-2">
			<%= f.label :age %>
			<%= f.text_field :age, :class => 'form-control' %>
		</div>
		<div class="col-md-2">
			<%= f.label :sex %>
			<%= f.select :sex, options_for_select([['Male','male'],['Female','female']], @user.sex), { include_blank: false}, {:class => 'form-control'} %>
		</div>		
	</div>
	<div class="form-group row">
		<div class="col-md-2">
			<%= f.label :group %>
			<%= f.select( :group, Group.all.collect {|g| [ g.name.capitalize, g.name ] }, {include_blank: false}, {:class => 'form-control'}) %>
		</div>
	</div>
	<div class="form-group row">
			<div class="col-md-12">		
			<%= f.submit 'Save', :class => 'btn btn-default' %>
			<%= link_to 'Cancel', users_path, :class => 'btn btn-default' %>
			</div>
	</div>
<% end %>