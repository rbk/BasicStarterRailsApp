<h1>People</h1>

<% if notice %>
	<div class="notice alert alert-info"><%= notice %></div>
<% end %>

<style>.table td { vertical-align: middle!important; }</style>

<table class="table table-striped table-condensed ">
  <thead>
    <tr>
      <!-- <th>Password</th> -->
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Group</th>
      <th>Email</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <!-- <td><%= user.password %></td> -->
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.age %></td>
      <td><%= user.sex.capitalize %></td>
      <td><%= user.group.capitalize %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-default' %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to 'New User', new_user_path, :class => 'btn btn-default' %>
</div>